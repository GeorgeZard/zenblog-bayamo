---
import ServicesSection from '~/components/astro/Services.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Services - Bayamo Beach Bar',
  description: 'Discover our premium services for birthday parties, business events, and wedding celebrations at Bayamo Beach Bar.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    tagline="Our Services"
    title="Curated Beach Experiences"
    subtitle="Transform your special moments into unforgettable memories with our premium beachside services. From intimate celebrations to grand events, we create the perfect atmosphere for every occasion."
    actions={[{ variant: 'primary', text: 'Inquire Now', href: '#contact' }]}
    image={{
      src: 'https://images.unsplash.com/photo-1544427920-c49ccfb85579?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Bayamo Beach Bar Services',
    }}
  />

  <!-- Services Component ************* -->
  <ServicesSection />

  <!-- Content Widget **************** -->
  <Content
    isReversed
    items={[
      {
        title: 'Personalized Planning',
        description:
          'Our experienced team works closely with you to understand your vision and create a tailored experience that exceeds expectations.',
        icon: 'tabler:users',
      },
      {
        title: 'Premium Beachfront Location',
        description:
          'Enjoy the stunning backdrop of pristine beaches and crystal-clear waters that make every moment picture-perfect.',
        icon: 'tabler:map-pin',
      },
      {
        title: 'Full-Service Catering',
        description:
          'From cocktails to gourmet cuisine, our culinary team delivers exceptional dining experiences with fresh, local ingredients.',
        icon: 'tabler:chef-hat',
      },
      {
        title: 'Professional Setup',
        description:
          'We handle all the details from decorations to sound systems, ensuring your event runs smoothly from start to finish.',
        icon: 'tabler:settings',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1530103862676-de8c9debad1d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=870&q=80',
      alt: 'Beach Event Setup',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Why Choose Bayamo?</h3>
      <p class="text-lg text-gray-600 dark:text-gray-300">
        With years of experience in beachside hospitality, we understand what makes events truly special.
      </p>
    </Fragment>
  </Content>

  <!-- Testimonials Widget *********** -->
  <Testimonials
    title="What Our Clients Say"
    testimonials={[
      {
        testimonial: `Bayamo Beach Bar made our wedding day absolutely magical. The team's attention to detail and the stunning beachfront setting created memories we'll treasure forever.`,
        name: 'Maria & Carlos',
        job: 'Wedding Celebration',
        image: {
          src: 'https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=930&q=80',
          alt: 'Happy Couple',
        },
      },
      {
        testimonial: `The corporate retreat we organized at Bayamo was a huge success. The combination of professional service and relaxed beach atmosphere was exactly what our team needed.`,
        name: 'Sarah Johnson',
        job: 'Corporate Event Planner',
        image: {
          src: 'https://images.unsplash.com/photo-1494790108755-2616b612b786?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
          alt: 'Event Planner',
        },
      },
      {
        testimonial: `My daughter's 16th birthday party was beyond our expectations. The team transformed the space into a teenage dream, and she's still talking about it months later!`,
        name: 'Roberto Martinez',
        job: 'Birthday Celebration',
        image: {
          src: 'https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=824&q=80',
          alt: 'Happy Parent',
        },
      },
    ]}
    callToAction={{
      text: 'View More Reviews',
      href: '#testimonials',
      icon: 'tabler:chevron-right',
    }}
  />

  <!-- CallToAction Widget *********** -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Book Your Event',
        href: '#contact',
      },
      {
        variant: 'secondary',
        text: 'View Gallery',
        href: '/gallery',
      },
    ]}
    title="Ready to Create Something Special?"
    subtitle="Let us help you plan the perfect beachside celebration. Contact our team today to discuss your vision and get a personalized quote."
  />
</Layout>
