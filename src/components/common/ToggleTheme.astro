---
import { Icon } from 'astro-icon/components';
import { UI } from 'astrowind:config';

export interface Props {
  label?: string;
  class?: string;
  iconClass?: string;
}

const {
  label = 'Toggle between Dark and Light mode',
  class: className = 'p-2.5 rounded-lg transition-all duration-300 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2',
  iconClass = 'w-5 h-5 transition-all duration-300',
} = Astro.props;
---

{
  !(UI.theme && UI.theme.endsWith(':only')) && (
    <button
      type="button"
      class={className}
      aria-label={label}
      data-aw-toggle-color-scheme
      title={label}
    >
      <Icon
        name="tabler:sun"
        class:list={[
          iconClass,
          'text-yellow-500 dark:text-yellow-400 block dark:hidden'
        ]}
      />
      <Icon
        name="tabler:moon"
        class:list={[
          iconClass,
          'text-slate-700 dark:text-slate-300 hidden dark:block'
        ]}
      />
    </button>
  )
}
