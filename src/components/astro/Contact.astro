---
import { Icon } from 'astro-icon/components';

// Contact component - migrated from React
// Maintains original functionality and appearance with full dark mode support
---

<section id="contact" class="py-24 bg-[#f5f3ee] dark:bg-gray-800 transition-colors duration-300">
  <div class="max-w-7xl mx-auto px-6 lg:px-12">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-16">
      <div class="lg:col-span-5">
        <h5 class="text-sm tracking-widest text-gray-500 dark:text-gray-400 mb-6 transition-colors duration-300">CONTACT</h5>
        <h2 class="text-4xl md:text-5xl font-light text-gray-900 dark:text-white mb-8 transition-colors duration-300">
          VISIT
          <br />
          BAYAMO
        </h2>
        <div class="w-24 h-1 bg-blue-900 dark:bg-blue-400 mb-8 transition-colors duration-300"></div>
        <div class="space-y-6 mb-12">
          <div class="flex items-start">
            <Icon name="tabler:map-pin" class="w-6 h-6 text-blue-900 dark:text-blue-400 mr-4 mt-1 transition-colors duration-300" />
            <div>
              <p class="text-lg font-medium text-gray-900 dark:text-white mb-1 transition-colors duration-300">Location</p>
              <p class="text-gray-700 dark:text-gray-300 transition-colors duration-300">Gythio, Mani (Lakonia), Greece</p>
            </div>
          </div>
          <div class="flex items-start">
            <Icon name="tabler:phone" class="w-6 h-6 text-blue-900 dark:text-blue-400 mr-4 mt-1 transition-colors duration-300" />
            <div>
              <p class="text-lg font-medium text-gray-900 dark:text-white mb-1 transition-colors duration-300">Phone</p>
              <p class="text-gray-700 dark:text-gray-300 transition-colors duration-300">+30 123 456 7890</p>
            </div>
          </div>
          <div class="flex items-start">
            <Icon name="tabler:mail" class="w-6 h-6 text-blue-900 dark:text-blue-400 mr-4 mt-1 transition-colors duration-300" />
            <div>
              <p class="text-lg font-medium text-gray-900 dark:text-white mb-1 transition-colors duration-300">Email</p>
              <p class="text-gray-700 dark:text-gray-300 transition-colors duration-300">info@bayamobeachbar.com</p>
            </div>
          </div>
        </div>
        <div class="border-t border-gray-300 dark:border-gray-600 pt-6 transition-colors duration-300">
          <p class="text-sm text-gray-500 dark:text-gray-400 transition-colors duration-300">
            OPENING HOURS
            <br />
            Monday - Sunday: 10:00 AM - 2:00 AM
          </p>
        </div>
      </div>
      <div class="lg:col-span-7">
        <div class="bg-white dark:bg-gray-700 h-full transition-colors duration-300">
          <div class="w-full h-[500px] bg-gray-200 dark:bg-gray-600 flex items-center justify-center transition-colors duration-300">
            <span class="text-gray-600 dark:text-gray-400 transition-colors duration-300">Map Location</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>