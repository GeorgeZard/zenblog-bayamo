---
import { Icon } from 'astro-icon/components';

// Footer component - migrated from React
// Maintains original functionality and appearance with full dark mode support
---

<footer class="bg-gray-900 dark:bg-black text-white py-12 transition-colors duration-300">
  <div class="max-w-7xl mx-auto px-6 lg:px-12">
    <div class="grid grid-cols-1 md:grid-cols-12 gap-8 items-center">
      <div class="md:col-span-4">
        <h3 class="text-2xl font-light tracking-widest">BAYAMO</h3>
        <p class="mt-2 text-gray-400 dark:text-gray-500 text-sm transition-colors duration-300">Creating unforgettable summer experiences</p>
      </div>
      <div class="md:col-span-4 md:text-center">
        <div class="flex space-x-6 md:justify-center">
          <a href="#" class="hover:text-blue-200 dark:hover:text-blue-300 transition-colors duration-300" aria-label="Facebook">
            <Icon name="tabler:brand-facebook" class="w-5 h-5" />
          </a>
          <a href="#" class="hover:text-blue-200 dark:hover:text-blue-300 transition-colors duration-300" aria-label="Instagram">
            <Icon name="tabler:brand-instagram" class="w-5 h-5" />
          </a>
          <a href="#" class="hover:text-blue-200 dark:hover:text-blue-300 transition-colors duration-300" aria-label="Twitter">
            <Icon name="tabler:brand-twitter" class="w-5 h-5" />
          </a>
        </div>
      </div>
      <div class="md:col-span-4 md:text-right">
        <p class="text-sm text-gray-400 dark:text-gray-500 transition-colors duration-300">
          &copy; {new Date().getFullYear()} Bayamo Beach Bar.
          <br />
          All rights reserved.
        </p>
      </div>
    </div>
  </div>
</footer>