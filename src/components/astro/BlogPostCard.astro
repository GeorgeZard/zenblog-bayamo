---
import { Icon } from 'astro-icon/components';

// BlogPostCard component - migrated from React
// Maintains original functionality and appearance with full dark mode support

export interface Props {
  post: {
    id: number;
    title: string;
    excerpt: string;
    image: string;
    date: string;
    category: string;
    slug: string;
  };
}

const { post } = Astro.props;
---

<article class="bg-white dark:bg-gray-800 transition-colors duration-300 hover:shadow-lg dark:hover:shadow-gray-900 transform hover:-translate-y-1 duration-300">
  <div class="relative aspect-[4/3]">
    <img src={post.image} alt={post.title} class="w-full h-full object-cover" />
    <div class="absolute top-0 left-0 bg-blue-900 dark:bg-blue-600 text-white text-xs tracking-wider py-2 px-4 transition-colors duration-300">
      {post.category}
    </div>
  </div>
  <div class="p-6">
    <div class="text-sm text-gray-500 dark:text-gray-400 mb-3 transition-colors duration-300">{post.date}</div>
    <h3 class="text-2xl font-light text-gray-900 dark:text-white mb-4 transition-colors duration-300">{post.title}</h3>
    <p class="text-gray-700 dark:text-gray-300 mb-6 transition-colors duration-300">{post.excerpt}</p>
    <a
      href={post.slug}
      class="inline-flex items-center text-blue-900 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 transition-colors duration-300 group"
    >
      <span class="text-sm tracking-widest mr-2">READ MORE</span>
      <Icon name="tabler:arrow-right" class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" />
    </a>
  </div>
</article>