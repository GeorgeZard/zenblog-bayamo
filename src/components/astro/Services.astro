---
import { Icon } from 'astro-icon/components';

// Define the services data
const services = [
  {
    title: 'BIRTHDAY PARTIES',
    description: 'Celebrate your special day in style with our customized party packages.',
    icon: 'tabler:calendar-event',
  },
  {
    title: 'BUSINESS EVENTS',
    description: 'Transform your corporate gatherings into memorable beachside experiences.',
    icon: 'tabler:briefcase',
  },
  {
    title: 'WEDDING PARTIES',
    description: 'Create magical moments for your wedding celebration with our stunning beach backdrop.',
    icon: 'tabler:heart',
  },
];
---

<section id="services" class="py-24 bg-[#f5f3ee] dark:bg-gray-900 transition-colors duration-300">
  <div class="max-w-7xl mx-auto px-6 lg:px-12">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-16">
      <div class="lg:col-span-4">
        <h5 class="text-sm tracking-widest text-gray-500 dark:text-gray-400 mb-6 transition-colors duration-300">
          SERVICES
        </h5>
        <h2 class="text-4xl md:text-5xl font-light text-gray-900 dark:text-white mb-8 transition-colors duration-300">
          CURATED
          <br />
          EXPERIENCES
        </h2>
        <div class="w-24 h-1 bg-blue-900 dark:bg-blue-400 mb-8 transition-colors duration-300"></div>
        <p class="text-lg text-gray-700 dark:text-gray-300 mb-8 transition-colors duration-300">
          We offer a range of premium services to make your time at Bayamo Beach Bar truly special. From intimate
          gatherings to large celebrations, our team will ensure every detail is perfect.
        </p>
        <a
          href="#contact"
          class="inline-block border-b-2 border-blue-900 dark:border-blue-400 text-gray-900 dark:text-white pb-1 text-sm tracking-widest hover:text-blue-900 dark:hover:text-blue-400 transition-all duration-300 group"
        >
          INQUIRE NOW
          <span class="inline-block transition-transform duration-300 group-hover:translate-x-1 ml-2">â†’</span>
        </a>
      </div>
      <div class="lg:col-span-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {services.map((service, index) => (
            <div class="bg-white dark:bg-gray-800 p-8 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 group">
              <div class="mb-6 flex justify-between items-center">
                <Icon 
                  name={service.icon} 
                  class="w-8 h-8 text-blue-900 dark:text-blue-400 transition-all duration-300 group-hover:scale-110" 
                />
                <span class="text-sm text-gray-400 dark:text-gray-500 font-mono transition-colors duration-300">
                  0{index + 1}
                </span>
              </div>
              <h3 class="text-xl font-medium text-gray-900 dark:text-white mb-4 transition-colors duration-300 group-hover:text-blue-900 dark:group-hover:text-blue-400">
                {service.title}
              </h3>
              <p class="text-gray-700 dark:text-gray-300 transition-colors duration-300 leading-relaxed">
                {service.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>